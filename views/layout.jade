doctype html
html(data-bs-theme="dark")
  head
    //- script para cambiar tema
    script(src="/javascripts/theme.js")
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400..700&family=Press+Start+2P&display=swap" rel="stylesheet")
  body
    nav(class="navbar fixed-top navbar-expand bg-body-tertiary")
      ul(class="navbar-nav mx-auto gap-3")
        li(class="nav-item active")
          //- link a listado completo de digimons
          a(class="nav-link" href="/wiki") Todos los Digimons
        li(class="nav-item active")
          //- link a un digimon al azar
          a(class="nav-link" id="randomDigimonLink" href="/digimon/#{randomDigimonName}") Digimon al azar!
        //- lista de temas disponibles para seleccionar
        li(class="nav-item dropdown")
          button(class="btn btn-link nav-link py-2 px-0 px-lg-2 dropdown-toggle d-flex align-items-center" id="bd-theme" type="button" aria-expanded="false" data-bs-toggle="dropdown" data-bs-display="static" aria-label="Toggle theme (auto)")
            span(class="ms-2 theme-icon-active" id="bd-theme-text") Cambiar tema
          ul(class="dropdown-menu dropdown-menu-end" aria-labelledby="bd-theme-text")
            li
              button(type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="light" aria-pressed="false") Claro
            li
              button(type="button" class="dropdown-item d-flex align-items-center" data-bs-theme-value="dark" aria-pressed="false") Oscuro
            li
              button(type="button" class="dropdown-item d-flex align-items-center active" data-bs-theme-value="auto" aria-pressed="true") Auto
    block content
